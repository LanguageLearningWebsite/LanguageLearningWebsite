<%= stylesheet_link_tag "video-js" %>
<%= stylesheet_link_tag "custom-videojs-player" %>
<%= stylesheet_link_tag "videojs-transcript" %>

<div class="main-player">
  <div class="video-container width-100">
    <video crossorigin="anonymous" id="video1" class="video-js vjs-default-skin" controls preload="auto" data-setup='{"playbackRates": [0.5, 1, 1.5, 2], "fluid": true}'>
      <source src="<%= video.url %>" type="video/mp4" />
      <% if !video.captions.empty? %>
        <% video.captions.each do |c| %>
          <track id="<%= c.file_file_name.split(".")[0] %>" label="<%= c.file_file_name.split(".")[0] %>" kind="captions" src="<%= c.file.url %>">
        <% end %>
      <% end %>
      <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
      </p>
    </video>
  </div>
  <div class="transcript-container width-30">
    <div class="vjs-transcript" id="transcript"></div>
  </div>
</div>

<div id="subtitle-display-1" class="subtitle-display width-100"></div>

</br>
</br>
<p class="card-text"> <small>Previous and Next buttons on the top are to move between sections</small></p>
<p class="card-text"><i class="fa fa-bars" style="margin-right: 15px;" aria-hidden="true"></i> <small> click this icon on the top left to navigate the lessons on the course</small></p>
<p class="card-text"><i class="fa fa-cc" style="margin-right: 15px;" aria-hidden="true"></i><small> click this icon on the video bars to select subtitle</small></p>
<p class="card-text"><i class="fa fa-tasks" style="margin-right: 15px;" aria-hidden="true"></i><small> click this icon the video bars to navigate the subtitles</small></p>
<p class="card-text"><small>Click Chinese Character letter on the subtitle for its definition</small></p>

<% if !video.captions.empty? %>
  <script type="text/javascript">
    setTimeout(function () {
      updateTranscript("video1");
      updateCaption("video1", 'simplified-characters', 'subtitle-display-1');
    }, 0);

    if (window.innerWidth <= 768) {
      $('.subtitle-display').insertAfter($('.video-container'))
    } else {
      $('.subtitle-display').insertAfter($('.main-player'))
    };

    window.onresize = function(event) {
      if (window.innerWidth <= 768) {
        $('.subtitle-display').insertAfter($('.video-container'))
      } else {
        $('.subtitle-display').insertAfter($('.main-player'))
      };
    };
  </script>
<% end %>
