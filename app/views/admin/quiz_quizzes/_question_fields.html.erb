<div class='field clearfix'>
  <hr/>
  <h4>Question</h4>
  <div class='row'>
    <div class='form-group col-sm-8'>
      <%= f.label :text, class: 'sr-only' %>
      <%= f.text_field :text, placeholder: 'question', class: 'form-control' %>
    </div>
  </div>
  <div class='row'>
    <div class='form-group col-sm-2'>
      <%= f.label :type %>
      <%= f.select :questions_type_id, Quiz::QuestionsType.questions_types_title, {}, class: 'form-control', style: 'height: 1.25rem;' %>
    </div>
  </div>
  <ol class='appendable'>
    <%= f.fields_for :options do |builder| %>
      <%= render 'option_fields', :f => builder %>
    <% end -%>
  </ol>
  <%= link_to_add_field 'Add option', f, :options %>
  <%= link_to_remove_field 'Remove question', f %>
</div>
