<div class="field">
  <div class="row">
    <div class="form-group col-xs-5">
      <%= f.label :text, class: 'sr-only' %>
      <%= f.text_field :text, placeholder: 'answer', class: 'form-control' %>
    </div>
    <div class="checkbox col-xs-2 col-sm-2">
    <%= f.label :correct do %>
      <%= f.check_box :correct %>
      Correct answer
    <% end %>
  </div>
    <div class="col-xs-4">
      <%= link_to_remove_field "Remove", f %>
    </div>
  </div>
</div>
