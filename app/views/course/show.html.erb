<div class="row" style="padding-left:15px;padding-right:15px;">
  <div class="col-md-5 mt-4 mb-4">
    <div class="card text-center">
      <div class="card-header">
        <h4 class="card-title"><%= @course.name %></h4>
      </div>
      <div class="card-block">
        <button class="btn btn-primary">Take this course</button>
      </div>
    </div>
  </div>

  <div class="col-md-7 mt-4 mb-4">
    <div class="card">
      <%= image_tag @course.image(:medium), :class => "card-img-top img-responsive" %>
      <div class="card-block">
        <h4 class="card-title"><%= @course.name %></h4>
        <hr>
        <p class="card-text"><%= @course.content %></p>
        <div class="list-group">
          <% @lessons.each do |lesson| %>
            <% if lesson.header %>
              <div class="list-group-item active">
                <i class="fa fa-graduation-cap"> <%= lesson.title %></i>
              </div>
            <% else %>
              <%= link_to [lesson.course, lesson], :class => "list-group-item list-group-item-action", :"data-turbolinks" => false do %>
                <%= lesson.title %>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
