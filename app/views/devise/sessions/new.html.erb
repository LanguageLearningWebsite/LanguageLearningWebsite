<%= stylesheet_link_tag 'log-in-page', media: 'all', 'data-turbolinks-track' => true %>

<div class="card card-container" style="text-align:center;">
  <%= render partial: "shared/devisemes" %>
  <img id="profile-img" class="profile-img-card" src="/assets/images/hat.svg" />
  <p id="profile-name" class="profile-name-card"></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <span id="reauth-email" class="reauth-email"></span>
    <%= f.email_field :email, autofocus: true , class: "form-control validate", placeholder:"email address" %>
    <!-- <%= f.text_field :username, autofocus: true , class: "form-control validate" %> -->
    <%= f.password_field :password, autocomplete: "off", class: "form-control validate", placeholder:"password" %>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me,  :style => "font-size: 14px;" %>
    <% end -%>
    <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block btn-account btn-signin'%>
    <%= link_to "Forgot password", new_user_password_path, :style => "font-size: 14px;" %>
  <% end %>
</div>

<script type="text/javascript">
  $('.message a').click(function(){
     $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
  });
</script>
