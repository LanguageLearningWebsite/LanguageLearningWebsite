<div class="row justify-content-md-center">
  <div class="card col-md-5 mt-3 mb-3">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="form-group">
        <%= f.label :first_name, class: 'col-md-3 control-label'  %>
        <div class="col-md-12">
          <%= f.text_field :first_name, autofocus: true, class: 'form-control validate'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: 'col-md-3 control-label'  %>
        <div class="col-md-12">
          <%= f.text_field :last_name, autofocus: true, class: 'form-control validate'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username, class: 'col-md-3 control-label'  %>
        <div class="col-md-12">
          <%= f.text_field :username, autofocus: true, class: 'form-control validate'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'col-md-3 control-label'  %>
        <div class="col-md-12">
          <%= f.email_field :email, class: 'form-control validate'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-md-3 control-label'  %> <i>(leave blank if you don't want to change it)</i>
        <div class="col-md-12">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control validate'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-md-3 control-label' %>
        <div class="col-md-12">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control validate'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'col-md-3 control-label' %> <i>(enter current password to confirm your changes)</i>
        <div class="col-md-12">
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control validate' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <%= f.submit "Update", class: "btn btn-primary", style: 'margin-bottom: 15px;' %>
          <div>
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default btn-xs', style: 'color: red; margin-bottom: 15px;' %>
            <%= button_to "Back", :back %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
