<%= stylesheet_link_tag 'edit-user', media: 'all', 'data-turbolinks-track' => true %>
<div class="card card-container">
	<h2>Account Settings</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <%= render partial: "shared/devisemes" %>
		<div class="form-group">
      <%= f.label :first_name %>
			<%= f.text_field :first_name, class: "form-control validate", placeholder:"First Name", :maxlength => 50, autofocus: true %>
		</div>
		<div class="form-group">
      <%= f.label :last_name %>
			<%= f.text_field :last_name, class: "form-control validate", placeholder:"Last Name", :maxlength => 50, autofocus: true %>
		</div>
		<div class="form-group">
      <%= f.label :email  %>
			<%= f.email_field :email, class: "form-control validate", placeholder:"Email Address" %>
		</div>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control validate", placeholder:"Username",:maxlength => 50, autofocus: true %>
    </div>
    <div class="form-group has-danger">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control validate', placeholder:"New Password"  %>
      <small id="emailHelp" class="form-text text-muted">(leave blank if you don't want to change it)</small>
    </div>
    <div class="form-group has-danger">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control validate', placeholder:"New Password"  %>
    </div>
    <div class="form-group has-success">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control validate', placeholder:"Current Password" %>
      <small id="emailHelp" class="form-text text-muted">(enter current password to confirm your changes)</small>
    </div>
    <%= f.submit "Update", class: "btn btn-outline-success btn-update" %>
	<% end %>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-danger btn-cancel' %>
</div>
<script type="text/javascript">
  $('.message a').click(function(){
     $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
  });
</script>
