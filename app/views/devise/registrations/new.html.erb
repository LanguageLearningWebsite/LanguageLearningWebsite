<%= stylesheet_link_tag 'devise/registrations', media: 'all', 'data-turbolinks-track' => true %>

<div class="card card-container" style="text-align:center; max-width: 400px; padding: 20px 20px;">
	<h2>Create an Account</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
		<%= render partial: "shared/devisemes" %>
		<div class="form-group">
			<%= f.text_field :first_name, class: "form-control validate", :maxlength => 50, autofocus: true, placeholder:"First Name" %>
		</div>
		<div class="form-group">
			<%= f.text_field :last_name, class: "form-control validate", :maxlength => 50, autofocus: true, placeholder:"Last Name" %>
		</div>
		<div class="form-group">
			<%= f.text_field :username, class: "form-control validate", :maxlength => 50, autofocus: true, placeholder:"User Name" %>
		</div>
		<div class="form-group">
			<%= f.email_field :email, class: "form-control validate", placeholder:"Email Address" %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, autocomplete: "off", class: "form-control validate", placeholder:"Password" %>
		</div>
		<div class="form-group">
			<%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block btn-account btn-signin" %>
		</div>
	<% end %>
	<p style="font-size: 14px; margin-bottom: 5px;">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
	<hr>
	<p style="font-size: 14px;">Already have an account? <%= link_to 'Sign in', new_user_session_path %></p>
</div>

<script type="text/javascript">
	$('.message a').click(function(){
	   $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
	});
</script>
