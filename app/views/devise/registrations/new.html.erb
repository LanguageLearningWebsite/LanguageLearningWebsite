<%= stylesheet_link_tag 'sign-up-page', media: 'all', 'data-turbolinks-track' => true %>

<div class="container-sign-up" style="text-align:center;">
	<div class = "row">
		<div class="panel panel-sign-up">
			<div class="panel-body">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  				<%= render partial: "shared/devisemes" %>

  				<div class="form-group">
  					<h2>SIGN UP</h2>
  				</div>

  				<div class="form-group">
  					<%= f.text_field :first_name, class: "form-control validate", :maxlength => 50, autofocus: true, placeholder:"First Name" %>
  				</div>

  				<div class="form-group">
  					<%= f.text_field :last_name, class: "form-control validate", :maxlength => 50, autofocus: true, placeholder:"Last Name" %>
  				</div>

  				<div class="form-group">
  					<%= f.email_field :email, class: "form-control validate", placeholder:"Email Address" %>
  				</div>

  				<div class="form-group">
  					<%= f.password_field :password, autocomplete: "off", class: "form-control validate", placeholder:"Password" %>
  				</div>

  				<div class="form-group" >
  						<%= f.submit "Sign up", class: "btn btn-primary" %>
  				</div>
        <% end %>
  		</div>

			<p class="form-group">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
			<hr>
			<p class="form-group">Already have an account? <%= link_to 'Sign in', new_user_session_path %></p>

		</div>
	</div>
</div>
