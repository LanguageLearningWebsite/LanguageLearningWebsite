  <%= stylesheet_link_tag    'sign-up-page', media: 'all', 'data-turbolinks-track' => true %>

<div class="container-sign-up">
	<div class = "row">
		<div class="panel panel-sign-up">
			<div class="panel-body">
				<form method="POST" action="#" role="form">
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
         <%= render partial: "shared/devisemes" %>

         <div class="form-group">
           <h2>Create account</h2>
         </div>

         <div class="form-group">
          <%= f.label :username, class: "control-label"%>
          <%= f.text_field :username, class: "form-control validate", :maxlength => 15, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :first_name, class: "control-label" %>
          <%= f.text_field :first_name, class: "form-control validate", :maxlength => 50, autofocus: true %>
        </div>

        <div class="form-group">
         <%= f.label :last_name, class: "control-label" %>
         <%= f.text_field :last_name, class: "form-control validate", :maxlength => 50,autofocus: true %>
       </div>

       <div class="form-group">
         <%= f.label :email, class: "control-label" %>
         <%= f.email_field :email, class: "form-control validate" %>
       </div>

       <div class="form-group">
         <%= f.label :password, class: "control-label" %>
         <%= f.password_field :password, autocomplete: "off", class: "form-control validate" %>
       </div>

       <div class="form-group">
         <%= f.label :password_confirmation, class: "control-label" %>
         <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control validate" %>
       </div>

       <div class="form-group">
         <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>

    </div>
    <p class="form-group">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
    <hr>
    <p></p>Already have an account? <%= link_to 'Sign in', new_user_session_path %></p>
  </form>
</div>
</div>
</div>
</div>

<% end %>
</div>