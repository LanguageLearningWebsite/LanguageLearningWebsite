<div class="container">
	<h2>Sign up</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
		<%= render partial: "shared/devisemes" %>

		<div class="form-group">
	    <%= f.label :username, class: "col-sm-2 control-label" %>
	    <div class="col-sm-6">
        <%= f.text_field :username, class: "form-control validate",autofocus: true %>
	    </div>
		</div>

		<div class="form-group">
	    <%= f.label :first_name, class: "col-sm-2 control-label" %>
	    <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control validate",autofocus: true %>
	    </div>
		</div>

		<div class="form-group">
	    <%= f.label :last_name, class: "col-sm-2 control-label" %>
	    <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control validate",autofocus: true %>
	    </div>
		</div>

		<div class="form-group">
		    <%= f.label :email, class: "col-sm-2 control-label" %>
		    <div class="col-sm-6">
		        <%= f.email_field :email, class: "form-control validate" %>
		    </div>
		</div>

		<div class="form-group">
	    <%= f.label :password, class: "col-sm-2 control-label" %>
	    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control validate" %>
	    </div>
		</div>

		<div class="form-group">
	    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
	    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control validate" %>
	    </div>
		</div>

		<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
	    </div>
		</div>

	<% end %>
</div>